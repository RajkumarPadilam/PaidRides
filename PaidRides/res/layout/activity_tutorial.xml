<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="raj.products.paidrides.Tutorial"
    android:background="@drawable/blue"
    tools:ignore="MergeRootFrame" >

    

    <TextView
        android:id="@+id/PMTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="App Features"
        android:textColor="#FFffff"
        android:textSize="18sp"
        android:typeface="serif" />

    
    <Button
        android:id="@+id/tutRider"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PMTitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rider" />

    <Button
        android:id="@+id/tutHousing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tutRider"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/housing" />
    
    <Button
        android:id="@+id/skipTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Skip" />

    <TextView
        android:id="@+id/tvRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tutRider"
        android:layout_toRightOf="@id/tutRider"
        android:text="Goto &quot;RIDERS&quot; section and click on any rider to talk to him instantenously."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_toRightOf="@id/tutHousing"
      	android:layout_alignBaseline="@id/tutHousing"
        android:text="Use the &quot;Housing&quot; section to post messages regarding vacancies or lease transfers"
        android:textColor="#000000" />

    <Button
        android:id="@+id/tutMyRoom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tutHousing"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/settings" />
    
    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_toRightOf="@id/tutMyRoom"
      	android:layout_alignBaseline="@id/tutMyRoom"
        android:text="Use the &quot;My Room&quot; section to change your availability status and post messages"
        android:textColor="#000000" />
    
    <Button
        android:id="@+id/tutMessage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tutMyRoom"
        android:layout_alignParentLeft="true"
        android:background="@drawable/message" />
    
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_toRightOf="@id/tutMessage"
      	android:layout_alignBaseline="@id/tutMessage"
        android:text="Use this section to post messages regarding rides or any info you want to ask or let others know"
        android:textColor="#000000" />


</RelativeLayout>

