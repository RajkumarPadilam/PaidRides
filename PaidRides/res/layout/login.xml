<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue"  >
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dip" >
        
        <TextView
            android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginPassword"
            android:layout_below="@+id/regPassword"
            android:layout_marginTop="27dp"
            android:padding="10dip"
            android:textColor="#e30000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/regGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="29dp"
            android:textSize="15dip"
            android:text="Don&apos;t have an Account? Create a new Account by clicking &apos;Sign Up!&apos;"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regGender"
            android:layout_below="@+id/regGender"
            android:layout_marginTop="20dp"
            android:text="Sign Up!"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/changeName"
            android:layout_below="@+id/loginEmail1"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:password="true" >

        </EditText>

        <TextView
            android:id="@+id/changeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_below="@+id/loginEmail1"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="18dip" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regGender"
            android:layout_below="@+id/loginPassword"
            android:layout_marginTop="16dp"
            android:text="Sign In!"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/loginEmail1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_error"
            android:layout_below="@+id/regPhone"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <TextView
            android:id="@+id/regPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_error"
            android:layout_below="@+id/login_error"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/regPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
        	android:typeface="serif"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </RelativeLayout>
 
</ScrollView>